<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="20.0dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="40dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="158dp">

            <TextView
                android:text="类型:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/dialogTextView3"
                android:gravity="center"
                android:layout_alignBottom="@+id/dialogCheckBox" />

            <CheckBox
                android:text="年"
                android:layout_height="wrap_content"
                android:id="@+id/dialogCheckBox"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/dialogTextView3"
                android:layout_toEndOf="@id/dialogTextView3"
                android:layout_width="45dp" />

            <CheckBox
                android:text="月"
                android:layout_height="wrap_content"
                android:id="@+id/dialogCheckBox2"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/dialogCheckBox"
                android:layout_alignBottom="@id/dialogCheckBox"
                android:layout_width="45dp" />

            <CheckBox
                android:text="周"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/dialogCheckBox2"
                android:layout_toEndOf="@id/dialogCheckBox2"
                android:id="@+id/dialogCheckBox3"
                android:layout_alignBottom="@id/dialogCheckBox2"
                android:layout_width="45dp" />

            <CheckBox
                android:text="日"
                android:layout_height="wrap_content"
                android:id="@+id/dialogCheckBox4"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/dialogCheckBox3"
                android:layout_toEndOf="@id/dialogCheckBox3"
                android:layout_alignBottom="@id/dialogCheckBox3"
                android:layout_width="45dp" />

            <CheckBox
                android:text="长期"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/dialogCheckBox4"
                android:id="@+id/dialogCheckBox5"
                android:layout_alignBottom="@id/dialogCheckBox4"
                android:layout_width="50dp" />

            <TextView
                android:text="内容："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:id="@+id/dialogTextView" />

            <TextView
                android:text="级别："
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialogTextView2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/dialogCheckBox6" />

            <CheckBox
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialogCheckBox6"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/dialogTextView2"
               />

            <CheckBox
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialogCheckBox7"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/dialogCheckBox"
                android:layout_toEndOf="@+id/dialogCheckBox" />

            <CheckBox
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialogCheckBox8"
                android:layout_alignTop="@+id/dialogCheckBox7"
                android:layout_toRightOf="@+id/dialogCheckBox7"
                android:layout_toEndOf="@+id/dialogCheckBox7" />

            <CheckBox
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialogCheckBox9"
                android:layout_alignBaseline="@+id/dialogCheckBox8"
                android:layout_alignBottom="@+id/dialogCheckBox8"
                android:layout_toRightOf="@+id/dialogCheckBox8"
                android:layout_toEndOf="@+id/dialogCheckBox8" />

            <EditText android:id="@+id/dialogEditText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/dialogTextView"
                android:layout_toEndOf="@+id/dialogTextView" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/dialogPositiveButton"
                android:layout_width="114.0dip"
                android:layout_height="40.0dip"
                android:gravity="center"
                android:visibility="visible" />

            <Button
                android:id="@+id/dialogNegativeButton"
                android:layout_width="114.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="20.0dip"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>